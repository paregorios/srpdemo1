               <placeName xml:id="name25-5" xml:lang="ar" source="#bib25-3">العقر</placeName>
               <placeName xml:id="name25-6" xml:lang="ar" source="#bib25-3">عقر الحميدية</placeName>
               <placeName xml:id="name25-7" xml:lang="en" source="#bib25-4">ʿAqr</placeName>
               <placeName xml:id="name25-8" xml:lang="en" source="#bib25-4">ʿAqr al-Ḥumaydiyya</placeName>
               <desc xml:id="abstract-en-25"/>
               <desc xml:lang="syr-Syrj">
                  <quote source="#bib25-2">ܩܶܠܥܳܐ ܕܰܒܛܘܪܐ ܕܡܘܨܠ. ܘܰܠܡܰܕܢܚܳܗ̇ ܡܰܪܕܶܐ ܬܪܶܝܢ ܝܰܘ̈ܡܝܢ ܡܶܬܝܰܕܥܳܐ ܗܘܳܬ ܥܰܩܪ ܚܘܡܰܝܕܝܗ. </quote>
               </desc>
               <desc xml:lang="ar">
                  <quote source="#bib25-3">قلعة من جبال الموصل شرقيها مرحلة يومين عنها تعرف بعقر الحميدية.</quote>
               </desc>
               <desc xml:lang="en">
                  <quote source="#bib25-4">a citadel two days journey north of Mosul. It is known as ʿAqr al-Ḥumaydiyya.</quote>
               </desc>
               <location type="gps" source="#bib25-1">
                  <geo>36.741389 43.893333</geo>
               </location>
               <state type="existence"/>
               <idno type="URI">http://syriaca.org/place/25</idno>
               <idno type="URI">http://en.wikipedia.org/wiki/Aqrah</idno>
