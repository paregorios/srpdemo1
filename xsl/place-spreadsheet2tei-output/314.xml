         <listPlace>
            <place xml:id="place-314" type="">
               <placeName xml:id="name314-1" xml:lang="en" syriaca-tags="#syriaca-authorized">Tel Maḥre</placeName>
               <placeName xml:id="name314-2"
                          xml:lang="syr"
                          syriaca-tags="#syriaca-authorized">ܬܠ ܡܚܪܝ</placeName>
               <placeName xml:id="name314-3" xml:lang="syr-Syrj" source="#bib314-1">ܬܶ</placeName>
               <placeName xml:id="name314-4" xml:lang="syr-Syrj" source="#bib314-1">ܡܰܚܪܝ</placeName>
               <placeName xml:id="name314-5"
                          xml:lang="ar"
                          source="#bib314-2"
                          corresp="#name314-6">تلّ محرى </placeName>
               <placeName xml:id="name314-6"
                          xml:lang="en"
                          source="#bib314-3"
                          corresp="#name314-5">Tell Maḥre</placeName>
               <desc xml:id="abstract-en-314"/>
               <desc xml:lang="syr-Syrj">
                  <quote source="#bib314-1">ܡܕܝܢܬܘܢܝܬܳܐ ܕܒܶܝܬ ܚܰܣܰܢ ܡܰܣܠܡܗ ܒܶܢ ܥܰܒܕ ܐܠܡܠܟ ܠܩܰܐܠܘܢܝܩܝ ܘܰܫܡܗ̇ ܝܰܘܡܳܢ ܬܠ ܐܠܡܰܢܰܐܟܝܪ.</quote>
               </desc>
               <desc xml:lang="ar">
                  <quote source="#bib314-2">بليدة بين حصن مسلمة بن عبد الملك والرقة واسمها اليوم تل المناخير</quote>
               </desc>
               <desc xml:lang="en">
                  <quote source="#bib314-3">a small town between Ḥiṣn Maslama Ibn ʿAbd al-Malik and al-Raqqa, now called Tell al-Manakhir. </quote>
               </desc>
               <state type="existence"/>
               <idno type="URI">http://syriaca.org/place/314</idno>
               <bibl xml:id="bib314-1">
                  <title xml:lang="syr">ܒܪ̈ܘܠܐ ܒܕܝܪ̈ܐ ܕܥܠ ܡܪܕܘܬ ܝܘܠܦܢ̈ܐ ܣܘܪ̈ܝܝܐ ܗܕܝܪ̈ܐ</title>
                  <ptr target="http://syriaca.org/bibl/3"/>
