         <listPlace>
            <place xml:id="place-352" type="">
               <placeName xml:id="name352-1" xml:lang="en" syriaca-tags="#syriaca-authorized">Dayro da-Knushyo</placeName>
               <placeName xml:id="name352-2"
                          xml:lang="syr"
                          syriaca-tags="#syriaca-authorized">ܕܝܪܐ ܕܟܢܘܫܝܐ</placeName>
               <placeName xml:id="name352-3" xml:lang="syr-Syrj" source="#bib352-1">ܕܰܝܪܳ</placeName>
               <placeName xml:id="name352-4" xml:lang="syr-Syrj" source="#bib352-1">ܕܰܟܢܘܫܝܳܐ</placeName>
               <placeName xml:id="name352-5"
                          xml:lang="ar"
                          source="#bib352-2"
                          corresp="#name352-6">دير خنوشيا</placeName>
               <placeName xml:id="name352-6"
                          xml:lang="en"
                          source="#bib352-3"
                          corresp="#name352-5">Khanushya Monastery</placeName>
               <desc xml:id="abstract-en-352"/>
               <desc xml:lang="syr-Syrj">
                  <quote source="#bib352-1">ܒܛܘܪܳܐ ܕܫܺܝܓܘܪ ܕܟܺܝܪ ܒܡܶܨܥܳܝ̈ܬܗ̇ ܕܡܰܐܬܳܐ ܫܬܝܺܬܝܳܬܐ ܘܒܶܗ ܐܶܬܢܰܦܩ ܡܰܦܪܝܳܢܐ ܦܰܘܠܘܣ ܫܢܰܬ 722  ܘܕܰܝܪܳܝܐ ܕܰܘܝܕ ܒܰܪ ܦܰܘܠܳܘܣ ܒܪܺܝܫ ܕܳܪܳܐ ܬܫܝܥܳܝܐ.   </quote>
               </desc>
               <desc xml:lang="ar">
                  <quote source="#bib352-2">في جبل سنجار؛ ذكر في اواسط المئة السادسة وفيه تخرج المفريان بولس 722 والراهب داود بن بولس (صدر القرن التاسع)</quote>
               </desc>
               <desc xml:lang="en">
                  <quote source="#bib352-3">in the mountain of Sinjar, is first mentioned in history in the sixth century. From it graduated Maphryono Paul in 722 and the monk David Bar Paul in the beginning of the ninth century.</quote>
               </desc>
               <state type="existence"/>
               <idno type="URI">http://syriaca.org/place/352</idno>
