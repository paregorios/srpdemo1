         <listPlace>
            <place xml:id="place-419" type="">
               <placeName xml:id="name419-1" xml:lang="en" syriaca-tags="#syriaca-authorized">al-Ṣāliḥiyya</placeName>
               <placeName xml:id="name419-2"
