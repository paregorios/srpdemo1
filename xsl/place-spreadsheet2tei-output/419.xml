               <placeName xml:id="name419-3" xml:lang="syr-Syrj" source="#bib419-1">ܨܰܐܠܚܝ</placeName>
               <placeName xml:id="name419-4" xml:lang="syr-Syrj" source="#bib419-1"/>
               <placeName xml:id="name419-5"
                          xml:lang="ar"
                          source="#bib419-2"
                          corresp="#name419-6">الصالحية</placeName>
               <placeName xml:id="name419-6"
                          xml:lang="en"
                          source="#bib419-3"
                          corresp="#name419-5">Ṣaliḥiyya</placeName>
               <desc xml:id="abstract-en-419"/>
               <desc xml:lang="syr-Syrj">
                  <quote source="#bib419-1">܆ܩܪܝܬܐ ܗܝ ܪܰܒܬܐ ܕܒܰܫܦܘܠܐ ܕܛܘܪܳܐ ܕܩܰܐܣܒܘܢ ܕܰܒܥܳܒܐ ܕܕܰܪܡܣܘܩ ܘܐܶܬܚܰܝܕܰܬ ܠܗ̇ </quote>
               </desc>
               <desc xml:lang="ar">
                  <quote source="#bib419-2">قرية كبيرة كانت في لحف جبل قاسيون من غوطة دمشق وقد اتصلت بها.</quote>
               </desc>
               <desc xml:lang="en">
                  <quote source="#bib419-3">a large village which was situated in the Ghūta of Damascus, at the foot of Qasyun Mountain. It has now become part of Damascus.</quote>
               </desc>
               <state type="existence"/>
               <idno type="URI">http://syriaca.org/place/419</idno>
               <bibl xml:id="bib419-1">
                  <title xml:lang="syr">ܒܪ̈ܘܠܐ ܒܕܝܪ̈ܐ ܕܥܠ ܡܪܕܘܬ ܝܘܠܦܢ̈ܐ ܣܘܪ̈ܝܝܐ ܗܕܝܪ̈ܐ</title>
                  <ptr target="http://syriaca.org/bibl/3"/>
