               <placeName xml:id="name363-1" xml:lang="en" syriaca-tags="#syriaca-authorized">Mor Sharbel</placeName>
               <placeName xml:id="name363-2"
                          xml:lang="syr"
                          syriaca-tags="#syriaca-authorized">ܕܝܪܐ ܕܡܪܝ ܫܪܒܠ</placeName>
               <placeName xml:id="name363-3" xml:lang="syr-Syrj" source="#bib363-1">ܕܰܝܪܳ</placeName>
               <placeName xml:id="name363-4" xml:lang="syr-Syrj" source="#bib363-1">ܕܡܳܪ</placeName>
               <placeName xml:id="name363-5" xml:lang="syr-Syrj" source="#bib363-1">ܫܰܪܒܶܠ</placeName>
               <placeName xml:id="name363-6"
                          xml:lang="ar"
                          source="#bib363-2"
                          corresp="#name363-7">دير مار شربيل</placeName>
               <placeName xml:id="name363-7"
                          xml:lang="en"
                          source="#bib363-3"
                          corresp="#name363-6">Sharbil Monastery</placeName>
               <desc xml:id="abstract-en-363"/>
               <desc xml:lang="syr-Syrj">
                  <quote source="#bib363-1">ܒܰܟܦܪ ܫܳܡܰܥ. ܥܰܗܕܗ ܡܰܟܬܰܒܙܰܒܢ̈ܐ ܒܰܫܢܰܬ  1210  ܥܕܰܡܳܐ ܠܰܐܚܪ̈ܳܝܬܗ ܕܕܳܪܐ ܫܬܰܥܣܝܺܪܳܝܐ. ܘܡܶܢܗ ܩܳܡ ܡܰܦܪܝܳܢܐ ܒܛܘܪܥܰܒܕܝܢ.</quote>
               </desc>
               <desc xml:lang="ar">
                  <quote source="#bib363-2">فى كفر شامع ذكره التاريخ عام 1210 حتى اواخر القرن السادس عشر ومنه نشأ مفريان بطور عبدين</quote>
               </desc>
               <desc xml:lang="en">
                  <quote source="#bib363-3">in Kafr Shami in Tur ʿAbdin, was first mentioned in history in 1210 and must have remained in existence until the end of the sixteenth century. It produced one Maphryono.</quote>
               </desc>
               <state type="existence"/>
