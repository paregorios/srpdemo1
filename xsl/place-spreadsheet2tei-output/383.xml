         <listPlace>
            <place xml:id="place-383" type="">
               <placeName xml:id="name383-1" xml:lang="en" syriaca-tags="#syriaca-authorized">Mor Giwargis</placeName>
               <placeName xml:id="name383-2"
                          xml:lang="syr"
                          syriaca-tags="#syriaca-authorized">ܕܝܪܐ ܕܡܪܝ ܓܘܪܓܝܣ</placeName>
               <placeName xml:id="name383-3"
                          xml:lang="syr-Syrj"
                          source="#bib383-1"
                          corresp="#name383-4 #name383-5">ܕܰܝܪܳܐ ܕܡܳܪܝ ܓܶܘܪܓܝܣ</placeName>
               <placeName xml:id="name383-4"
                          xml:lang="ar"
                          source="#bib383-2"
                          corresp="#name383-3 #name383-5">دير مار كوركيس</placeName>
               <placeName xml:id="name383-5"
                          xml:lang="en"
                          source="#bib383-3"
                          corresp="#name383-3 #name383-4">George Monastery</placeName>
               <desc xml:id="abstract-en-383"/>
               <desc xml:lang="syr-Syrj">
                  <quote source="#bib383-1">ܒܢܰܚܠܐ ܕܫܥܒ ܩܪܺܝܬܐ ܠܬܰܝܡܢܳܗ̇ ܕܡܶܪܕܝܢ ܫܰܟܠܠܗ ܝܘܚܰܢܢ ܡܝܛܪܘܦܘܠܝܛܐ ܕܡܪܕܝܢ ܒܡܶܨܥܳܝ̈ܬܗ̇ ܕܡܰܐܬܐ ܕܝ̄ܒ ܆ ܘܐܶܬܢܰܦܰܩ ܒܗ ܚܰܕ ܐܶܦܝܣܩܘܦܐ ܘܥܰܡܝܪ ܗܘܐ ܫܢܰܬ  1332</quote>
               </desc>
               <desc xml:lang="ar">
                  <quote source="#bib383-2">في وادي قرية شعب جنوبي ماردين، رمه يوحنا مطران ماردين اواسط المئة الثانية عشرة وتخرج فيه اسقف وكان عامرا سنة 1332.</quote>
               </desc>
               <desc xml:lang="en">
                  <quote source="#bib383-3">located in a valley south of Mardin, was renovated by John, metropolitan of Mardin, in the middle of the twelfth century and remained active until 1332. It produced one bishop.</quote>
               </desc>
               <state type="existence"/>
               <idno type="URI">http://syriaca.org/place/383</idno>
               <bibl xml:id="bib383-1">
                  <title xml:lang="syr">ܒܪ̈ܘܠܐ ܒܕܝܪ̈ܐ ܕܥܠ ܡܪܕܘܬ ܝܘܠܦܢ̈ܐ ܣܘܪ̈ܝܝܐ ܗܕܝܪ̈ܐ</title>
                  <ptr target="http://syriaca.org/bibl/3"/>
                  <citedRange unit="pp">551</citedRange>
               </bibl>
               <bibl xml:id="bib383-2">
                  <title xml:lang="ar">كتاب اللؤلؤ المنثور في تاريخ العلوم والأداب السريانية</title>
