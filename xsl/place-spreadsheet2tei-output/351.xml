               <placeName xml:id="name351-2"
                          xml:lang="syr"
                          syriaca-tags="#syriaca-authorized">ܕܝܪܐ ܕܚܢܝܢܐ ܐܘ ܚܢܢܝܐ</placeName>
               <placeName xml:id="name351-3" xml:lang="syr-Syrj" source="#bib351-1">ܕܰܝܪܳ</placeName>
               <placeName xml:id="name351-4" xml:lang="syr-Syrj" source="#bib351-1">ܕܚܰܢܝܢܳ</placeName>
