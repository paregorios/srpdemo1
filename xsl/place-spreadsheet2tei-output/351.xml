               <placeName xml:id="name351-7"
                          xml:lang="ar"
                          source="#bib351-2"
                          corresp="#name351-8">دير حنينا او حنانيا</placeName>
               <placeName xml:id="name351-8"
                          xml:lang="en"
                          source="#bib351-3"
                          corresp="#name351-7">Ḥananya Monastery</placeName>
               <placeName xml:id="name351-9" xml:lang="en" source="#bib351-4">monastery of Mar Hanina</placeName>
               <desc xml:id="abstract-en-351"/>
               <desc xml:lang="syr-Syrj">
                  <quote source="#bib351-1">ܘܰܟܒܰܪ ܡܶܬܒܰܝܬܶܐ ܠܚܰܢܝܢܳܐ ܥܢܘܳܝܐ  500  ܒܶܗ ܐܶܬܬܣܪܰܚ ܦܶܛܪܘܣ ܬܠܝܬܳܝܐ ܫܢܰܬ  581.  </quote>
               </desc>
               <desc xml:lang="ar">
                  <quote source="#bib351-2">ولعله ينسب الى حنينا الناسك 500+ فيه رسم بطرس الثالث عام 581</quote>
               </desc>
               <desc xml:lang="en">
                  <quote source="#bib351-3">perhaps named for Ḥananya the ascetic (d. 500). Peter III was consecrated as the Patriarch at this monastery in 581.</quote>
               </desc>
               <state type="existence"/>
               <idno type="URI">http://syriaca.org/place/351</idno>
