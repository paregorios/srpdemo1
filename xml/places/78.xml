            <listPlace>
                <place xml:id="place-78" type="city">
                    <placeName xml:id="name78-1" xml:lang="en" syriaca-tags="#syriaca-headword" source="#bib78-1 #bib78-2 #bib78-5 #bib78-6" corresp="#name78-4 #name78-5">Edessa</placeName>
                    <placeName xml:id="name78-2" xml:lang="en" source="#bib78-1">Urfa</placeName>
                    <placeName xml:id="name78-3" xml:lang="syr" syriaca-tags="#syriaca-headword">ܐܘܪܗܝ</placeName>
                    <placeName xml:id="name78-4" xml:lang="syr-Syrj" source="#bib78-3 #bib78-5" corresp="#name78-1 #name78-5">ܐܘܪܗܳܝ</placeName>
                    <placeName xml:id="name78-5" xml:lang="ar" source="#bib78-4" corresp="#name78-1 #name78-4">الرها</placeName>
                    <desc xml:id="abstract-en-78" xml:lang="en">A city of <placeName ref="http://syriaca.org/place/124">Mesopotamia</placeName>, the capital of the ancient kingdom of <placeName ref="http://syriaca.org/place/145">Osrhoene</placeName>, modern Urfa.</desc>
                    <desc xml:lang="en">
                        <quote source="#bib78-1">183. Edessa</quote>
                    </desc>
                    <desc xml:lang="syr-Syrj">
                        <quote source="#bib78-3">ܡܕܺܝܢܬܐ ܗܳܝ ܛܒܝܒܬܳܐ ܠܡܰܕܢܚܳܐ ܕܚܳܠܳܒ ܚܰܡܫܳܐ ܝܰܘܡ̈ܝܢ ܘܡܶܫܬܰܡܗܐ ܝܰܘܡܳܢ ܐܘܪܦܰܗ̈</quote>
                    </desc>
                    <desc xml:lang="ar">
                        <quote source="#bib78-4">مدينة مشهورة خمسة ايام عن حلب شرقا وتسمى اليوم اورفه.</quote>
                    </desc>
                    <desc xml:lang="en">
                        <quote source="#bib78-2">a famous city, five day journey eastward from <placeName ref="http://syriaca.org/place/18">Aleppo</placeName>, now called Urfa.</quote>
                    </desc>
                    <location type="gps" source="#bib78-1">
                        <geo>37.15 38.8</geo>
                    </location>
                    <location type="relative" source="#bib78-2">
                        <measure unit="days-journey" quantity="5">five day journey</measure>
                        <offset>eastward from</offset>
                        <placeName ref="http://syriaca.org/place/18">Aleppo</placeName>
                    </location>
                    <event when="-0304" source="#bib78-1">
                        <desc xml:lang="en">Renamed Edessa by Seleucus I Nicator.</desc>
                    </event>
                    <event when="0201" source="#bib78-1">
                        <desc xml:lang="en">Flood of the river <placeName ref="http://syriaca.org/place/191">Daiṣan</placeName> destroyed part of city.</desc>
                    </event>
                    <state type="existence" from="-0304"/>
                    <state type="confession" from="0451" to="1924" source="#bib78-1">
                        <label>Syrian Orthodox</label>
                    </state> 
                    <state type="confession" from="0641" source="#bib78-1">
                        <label>Muslim</label>
                    </state>
                    <state type="confession" from="1098" to="1144" source="#bib78-1">
                        <label>Latin</label>
                    </state>
                    <idno type="URI">http://syriaca.org/place/78</idno>
                    <idno type="URI">http://pleiades.stoa.org/places/658457</idno>
                    <idno type="URI">http://en.wikipedia.org/wiki/Edessa</idno>
                    <idno type="URI">http://en.wikipedia.org/wiki/Şanlıurfa</idno>
                    <bibl xml:id="bib78-1">
                        <title xml:lang="en">The Gorgias Encyclopedic Dictionary of the Syriac Heritage</title>
                        <ptr target="http://syriaca.org/bibl/1"/>
                        <citedRange unit="pp">138-139</citedRange>
                        <citedRange unit="maps">I B1, II B1, III</citedRange>
                    </bibl>
                    <bibl xml:id="bib78-2">
                        <title xml:lang="en">The Scattered Pearls: A History of Syriac Literature and Sciences</title>
                        <ptr target="http://syriaca.org/bibl/4"/>
                        <citedRange unit="pp">553</citedRange>
                    </bibl>
                    <bibl xml:id="bib78-3">
                        <title xml:lang="syr">ܒܪ̈ܘܠܐ ܒܕܝܪ̈ܐ ܕܥܠ ܡܪܕܘܬ ܝܘܠܦܢ̈ܐ ܣܘܪ̈ܝܝܐ ܗܕܝܪ̈ܐ</title>
                        <ptr target="http://syriaca.org/bibl/3"/>
                        <citedRange unit="pp">556</citedRange>
                    </bibl>
                    <bibl xml:id="bib78-4">
                        <title xml:lang="ar">كتاب اللؤلؤ المنثور في تاريخ العلوم والأداب السريانية</title>
                        <ptr target="http://syriaca.org/bibl/2"/>
                        <citedRange unit="pp">516</citedRange>
                    </bibl>
                    <bibl xml:id="bib78-5">
                        <title xml:lang="en">Catalogue of Syriac Manuscripts in the British Museum Acquired since the Year 1838</title>
                        <ptr target="http://syriaca.org/bibl/8"/>
                        <citedRange unit="pp">2:912</citedRange>
                    </bibl>
                    <bibl xml:id="bib78-6">
                        <title xml:lang="en">The Comprehensive Bibliography on Syriac Christianity</title>
                        <ptr target="http://syriaca.org/bibl/5"/>
                    </bibl>
